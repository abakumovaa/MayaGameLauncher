<Page x:Class="MayaGameLauncher.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MayaGameLauncher.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="450" d:DesignWidth="800"
  Title="LoadingPage">

    <Grid>
        <TextBlock Text="Лаунчер MayaGames загружается..." Foreground="White" FontSize="16" FontWeight="DemiBold"
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 60 0 0"/>
        <ProgressBar
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="0 115 0 0"
        Width="300" IsIndeterminate="True" Background="#FF14213B" Foreground="#FF0F97E7"/>
    </Grid>
</Page>
